{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++ build project",
      "type": "shell",
      "command": "g++",
      "args": [
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/shader.cpp",
        "${workspaceFolder}/texture.cpp",
        "${workspaceFolder}/body.cpp",
        "-o",
        "${workspaceFolder}/solar_system",
        "-lGLEW",
        "-lGL",
        "-lglfw",
        "-std=c++11"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "g++ build (old main)",
      "type": "shell",
      "command": "g++",
      "args": [
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/main",
        "-lGLEW",
        "-lGL",
        "-lglfw"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lGLEW",
        "-lGL",
        "-lglfw"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
